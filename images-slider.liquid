{{ 'swiper.min.css' | file_url | stylesheet_tag }}
<script src="{{ 'swiper.min.js' | file_url }}?v=1749235648" defer></script>

{% stylesheet %}
  @font-face {
    font-family: 'Neue Montreal';
    src: url('https://cdn.shopify.com/s/files/1/0696/6483/3763/files/NeueMontreal-Regular.woff2?v=1750348594') format('woff2');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  .dev-trial-main {
    max-width: 393px;
    margin: 0 auto;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .dev-heading {
    font-family: 'Neue Montreal', sans-serif;
    font-weight: 400;
    font-size: 21.53px;
    line-height: 120%;
    letter-spacing: 0;
    color: #9F9F9F;
    margin: 0;
  }

  .dev-heading span {
    font-weight: 500;
    color: #9f3e3e;
  }

  .dev-slider-container {
    position: relative;
  }

  .dev-swiper {
    padding-bottom: 30px;
  }

  .dev-swiper-slide {
    max-width: 219px !important;
    max-height: 329px !important;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }

  .dev-swiper-slide::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40%;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000c9);
    z-index: 1;
  }

  .dev-swiper-slide img {
    width: 100%;
    height: auto;
    display: block;
  }

  .dev-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    color: white;
    padding: 11px 10px;
    font-size: 14px;
    text-align: center;
    font-family: 'Neue Montreal', sans-serif;
    font-weight: 400;
    z-index: 2;
  }

  @media (max-width: 800px) {
    .dev-swiper {
      padding: 10px;
    }
    .dev-trial-main {
      padding:20px 10px;
    }
     .dev-heading {
      text-align: center;
     }
  }
{% endstylesheet %}

<div class="dev-trial-main">
  <div>
    <h2 class="dev-heading">{{ section.settings.heading }}</h2>
  </div>

  <div class="dev-slider-container">
    <div class="swiper dev-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide dev-swiper-slide">
            {% if block.settings.image %}
              {{  block.settings.image | image_url: width: 1500 | image_tag: alt:block.settings.alt_text | escape }}
            {% endif %}
            {% if block.settings.caption %}
              <div class="dev-caption">{{ block.settings.caption | escape }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.dev-swiper', {
      slidesPerView: 1.5,
      spaceBetween: 10,
      breakpoints: {
        801: {
          slidesPerView: 1.5
        }
      }
    });
  });
</script>


{% schema %}
{
  "name": "Dev Trial Round 1",
  "tag": "section",
  "class": "dev-trial-main",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "image_slide",
      "name": "Image Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Enter your caption"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Dev Trial Round 1",
      "category": "Custom"
    }
  ]
}
{% endschema %}
